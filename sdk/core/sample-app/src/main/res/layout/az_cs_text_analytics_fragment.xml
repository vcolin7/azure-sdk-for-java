<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AzCsTextAnalyticsFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <com.google.android.material.textfield.TextInputEditText
          android:id="@+id/inputText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:hint="@string/az_cs_text_analytics_input_text" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/detectLanguageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/az_cs_text_analytics_detect_language_button" />

    <TextView
        android:id="@+id/detectLanguageResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/az_cs_text_analytics_detect_language_result" />

  </LinearLayout>

</FrameLayout>
